 #include "../util.h"
 
+const char *
+vol_icon(const char *arg)
+{
+	char *p;
+	const char *perc;
+	static const char *icons[] = { "󰕿", "󰖀", "󰕾" };
+	unsigned long ul_perc;
+
+	if (!(perc = vol_perc(arg)))
+		return NULL;
+	p = strrchr(perc, ' ');
+	ul_perc = strtoul(p ? p + 1 : perc, NULL, 10);
+
+	return bprintf("%s %d", p ? "󰝟" : icons[ul_perc / 34], ul_perc);
+}
